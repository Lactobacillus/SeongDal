<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <% include ../partials/head_ranking_detail %>
    <script type="text/javascript" src="http://svcapi.gigagenie.ai/sdk/v1.0/js/gigagenie.js"></script>
    <script type="text/javascript">
    var options={};
    // 서비스 초기화
    function init(){
        options={};
    	options.keytype="GBOXDEVM"; // 개발(GBOXDEVM) 또는 상용(GBOXCOMM) 키 종류 입력
    	options.apikey="RTUwMDE4OTN8R0JPWERFVk18MTUyODY5MTc4MzQ4Ng=="; // 개발자 포털에서 키를 발급받아 입력

    	gigagenie.init(options,function(result_cd,result_msg,extra){
            if(result_cd===200){
                //함수 호출 및 개발 진행

                //callback 방식
                var options={};
                options.ttstext="달인 갤러리입니다. 보고싶은 사용자를 말하십시오. 이 기능은 현재 구현중입니다.";
                gigagenie.voice.sendTTS(options,function(result_cd,result_msg,extra){
                    if(result_cd===200){
                      //do next action
                      options = {};
		                  // options.voicemsg = "정답을 말씀해주세요.";
		                  gigagenie.voice.getVoiceText(options, function(result_cd, result_msg, extra) {
                        if (result_cd == 200) {
                          // var msg = "음성인식 결과 : " + extra.voicetext;
                          // alert(msg);
                          var script_list = <%- JSON.stringify(script_list) %>
                          for (var i = 0; i < script_list.length; i++) {
                            if (script_list[i].sentence.replace(/\s/g, "")  == extra.voicetext.replace(/\s/g, "") ) {
                              window.location.href = '/gallery/detail/' + script_list[i].id;
                              break;
                            } else if (i == script_list.length - 1) {
                              //alert("일치하는 대사가 없습니다.");
                              var options = {};
                              options.ttstext = "일치하는 대사가 없습니다.";
                              gigagenie.voice.sendTTS(options,function(result_cd,result_msg,extra) {
                                window.location.href = '/';
                              });
                            }
                          }
                        } else {
                          //alert("입력 시간이 초과되었습니다.")
                          var options = {};
                          options.ttstext = "입력 시간이 초과되었습니다.";
                          gigagenie.voice.sendTTS(options,function(result_cd,result_msg,extra) {
                            window.location.href = '/';
                          });
                        }
                         });
                    } else {
                     //extra.reason 에 voice 오류 전달.
                     //alert("giggenie init error!");
                     var options = {};
                     options.ttstext = "기가 지니 내부 오류로 인해 홈 화면으로 이동합니다.";
                     gigagenie.voice.sendTTS(options,function(result_cd,result_msg,extra) {
                       window.location.href = '/';
                     });
                 };
                });
    	    };
    	});
    }

    // 서비스 종료 명령 수신 API
    gigagenie.voice.onRequestClose=function(){
    	options={};
    	gigagenie.voice.svcFinished(options,function(result_cd,result_msg,extra){
    	});
    };
    </script>
  </head>
  <body onload=init()>
    <header>
      <% include ../partials/header %>
    </header>

    <div class="sidebar">
     <img id="logo" src='/images/ic_sungdal.png' />

     <a href='/' tabindex='0'><div class="menu">
       <span>홈</span>
     </div></a>
     <a href='/sync_measure' tabindex='1'><div class="menu">
       <span>연습하기</span>
     </div></a>
     <a href="/dubbing" tabindex='2'><div class="menu">
       <span>더빙하기</span>
     </div></a>
     <a href="/gallery" tabindex='3'><div class="menu selected">
       <span>달인 갤러리</span>
     </div></a>
   </div>

   <div class="table-container" style="margin-left: 400px;">
     <img class="sort-btn" src="/images/btn_recent.png"  onmouseover="this.src='/images/btn_recent_selected.png'"  onmouseout="this.src='/images/btn_recent.png'"/>
     <img class="sort-btn" src="/images/btn_score.png"  onmouseover="this.src='/images/btn_score_selected.png'"  onmouseout="this.src='/images/btn_score.png'"/>
     <table>
       <th>
         사용자
       </th>
       <th>
         장면
       </th>
       <th>
         음정
       </th>
       <th>
         속도
       </th>
       <th>
         강약
       </th>
       <th>
         다시 보기
       </th>

       <% for (var i=0; i< record_list.length; i++) { %>
         <tr>
           <td>
             <%= record_list[i].username %>
           </td>
           <td>
             "<%= script_list[record_list[i].scene].sentence %>"
           </td>
           <td>
             <% var str = ""; if (record_list[i].pitch == 0) {str = "완벽해요!";} else if (record_list[i].pitch == 1) {str = "낮아요!";} else if (record_list[i].pitch == 2) {str = "높아요!";} %>
             <%= str %>
           </td>
           <td>
             <% var str = ""; if (record_list[i].length == 0) {str = "완벽해요!";} else if (record_list[i].length == 1) {str = "빨라요!";} else if (record_list[i].length == 2) {str = "느려요!";} %>
             <%= str %>
           </td>
           <td>
             <% var str = ""; if (record_list[i].envelope == 0) {str = "완벽해요!";} else if (record_list[i].envelope == 1) {str = "달라요!";} %>
             <%= str %>
           </td>
           <td>
             <img src="/images/replay.png" width=30 alt="" onclick="location.href='/gallery/review/<%= record_list[i].scene%>/<%= record_list[i].filename%>'">
           </td>
           <td>
             <img src='/images/ic_rank_A.png' width=28 /> <%= record_list[i].score %>점
           </td>

         </tr>
       <% } %>
     </table>
   </div>

 </body>
</html>
