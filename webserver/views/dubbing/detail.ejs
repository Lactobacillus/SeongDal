<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head_detail %>
    <script type="text/javascript" src="http://svcapi.gigagenie.ai/sdk/v1.0/js/gigagenie.js"></script>
    <script type="text/javascript">
    var options={};
    // 서비스 초기화
    function init(){
        options={};
    	options.keytype="GBOXDEVM"; // 개발(GBOXDEVM) 또는 상용(GBOXCOMM) 키 종류 입력
    	options.apikey="RTUwMDE4OTN8R0JPWERFVk18MTUyODY5MTc4MzQ4Ng=="; // 개발자 포털에서 키를 발급받아 입력

      gigagenie.init(options,function(result_cd,result_msg,extra){
            if(result_cd===200){
                //함수 호출 및 개발 진행
                var script = <%- JSON.stringify(script) %>
                //callback 방식
                var options={};
                options.ttstext = script.actorName + "의 " + script.sentence + "를 선택하셨습니다. 원하는 메뉴를 말씀해주세요.";
                gigagenie.voice.sendTTS(options,function(result_cd,result_msg,extra){
                    if(result_cd===200){
                      //do next action
                      options = {};
		                  // options.voicemsg = "정답을 말씀해주세요.";
		                  gigagenie.voice.getVoiceText(options, function(result_cd, result_msg, extra) {
                        if(result_cd===200){
                          //do next action
                          if (extra.voicetext.replace(/\s/g, "") == "장면미리보기") {
                            window.location.href = '/dubbing/preview/' + script.id;
                          } else if (extra.voicetext.replace(/\s/g, "") == "더빙시작"){
                            window.location.href = '/dubbing/practice_dubbing/' + script.id;
                          } else {
                            //extra.reason 에 voice 오류 전달.
                            alert("일치하는 대사가 없습니다.");
                            window.location.href = '/';
                          }
                        } else {
                          alert("입력 시간이 초과하였습니다.");
                          window.location.href = '/'
                        }
                      });
                    } else {
                     //extra.reason 에 voice 오류 전달.
                     alert("giggenie init error!");
                 }
                });
    	    };
    	});
    }

    // 서비스 종료 명령 수신 API
    gigagenie.voice.onRequestClose=function(){
    	options={};
    	gigagenie.voice.svcFinished(options,function(result_cd,result_msg,extra){
    	});
    };

    gigagenie.voice.onVoiceCommand=function(event){
      switch(event){
          case 'nextPage':
              //navigate next page
              break;
          case 'prevPage':
              //navigate prev page
              window.history.back();
              break;
          default:
              break;
      }
    };
    </script>
  </head>
  <body onload=init()>
    <header>
      <% include ../partials/header %>
    </header>
    <span class="title">
      더빙하기
    </span>

    <div class="scene-info">
      <span class="scene-detail">
        <span class="scene-name">"<%=script.sentence%>"</span>
        <span class="scene-sub"><img class="detail-icon" src="/images/ic_movie.png" />
          <p>
             <%=script.movieName%>
          </p>
        </span>
        <span class="scene-sub">
          <img class="detail-icon" src="/images/ic_actor.png" />
            <p>
              <%=script.actorName%>
            </p>
          </span>
        <span class="scene-sub">
          <img class="detail-icon" src="/images/ic_scene.png" />
            <p>
              <%=script.description%>
            </p>
        </span>
    </span>
    <div class="scene-image" style="background: url('/images/<%=script.image%>') center center; background-repeat: no-repeat;
    background-size: cover;">
    </div>
  </div>

  <div class="actions">
    <img src="/images/btn_preview.png" onmouseover="this.src='/images/btn_preview_selected.png'"  onmouseout="this.src='/images/btn_preview.png'" onclick="location.href='/preview/<%=script.id%>'" />
    <img src="/images/btn_dub.png"  onmouseover="this.src='/images/btn_dub_selected.png'"  onmouseout="this.src='/images/btn_dub.png'" onclick="location.href='/dubbing/practice_dubbing/<%=script.id%>'"/>
  </div>
 </body>
</html>
